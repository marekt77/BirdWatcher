<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WeatherStationApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:WeatherStationApp.Pages"
    xmlns:local="clr-namespace:WeatherStationApp"
    
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Current Temp" Icon="{StaticResource Temp}">
            <ShellContent
                Title="Current Temp"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="OnePage" />
        </Tab>
        <Tab Title="Sun Track" Icon="{StaticResource SunTrack}">
            <ShellContent
                Title="Sun Track"
                ContentTemplate="{DataTemplate pages:SunTrackPage}"
                Route="SunTrackPage"/>
        </Tab>
        <Tab Title="Settings" Icon="{StaticResource Settings}">
            <ShellContent
                Title="Settings"
                ContentTemplate="{DataTemplate pages:SettingsPage}"
                Route="SettingsPage" />
        </Tab>
    </TabBar>
</Shell>
